<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ProductRating</title>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="sidebar">
        <button onclick="loadPage('Profile')">Профиль</button>
        <button onclick="loadPage('Recognition')">Распознавание</button>
        <button onclick="loadPage('Products')">Продукты</button>
    </div>

    <div class="content">
        <div id="content" class="fade-in">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/main.js" asp-append-version="true"></script>
</body>
</html>