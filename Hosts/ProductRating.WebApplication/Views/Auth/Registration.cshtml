@model RegistrationModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Регистрация</title>
    <link rel="stylesheet" href="~/css/registration.css" asp-append-version="true">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="register-box">
            <h2>Регистрация</h2>

            <form action="@Url.Action("Registration")" method="post">
                <div class="input-group">
                    <label asp-for="Phone">Номер телефона</label>
                    <input asp-for="Phone" placeholder="Введите номер телефона" />
                    <span asp-validation-for="Phone" class="text-error"></span>
                </div>

                <div class="input-group">
                    <label asp-for="Name">Имя пользователя</label>
                    <input asp-for="Name" placeholder="Введите имя пользователя" />
                    <span asp-validation-for="Name" class="text-error"></span>
                </div>

                <div class="input-group">
                    <label asp-for="Password">Пароль</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Введите пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-error"></div>

                <button type="submit" class="register-button">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</body>
</html>